  <body class="bg-light">
    <div class="container">
      <main>
        <div class="py-5 text-center">
          <!-- h2태그 내부에 적힌 거 변경해도 됨 -->
          <h2 style="font-weight: bold">Sign up</h2>
          <!-- p태그 내부에 적힌 거 변경해도 됨 -->
          <p class="lead">회원가입</p>
        </div>

        <div class="row g-5 d-flex justify-content-center justify-content-center">
          <!-- 회원가입 입력 -->
          <!-- 입력 받을 내용 및 input 변경해도 됨 / 주요 태그들 안에 id값 부여함 -->
          <div class="col-md-7 col-lg-8">
            <form id="signup-form" action="/signup" method="post" class="needs-validation" novalidate>
              <div class="row g-3">
                <!-- 이름 입력 -->
                <div class="col-sm-6">
                  <label for="firstName" class="form-label">Name</label>
                  <input name="name" id="name" type="text" class="form-control" placeholder="이름을 입력해주세요" value="" required />
                  <div id="nameError" class="invalid-feedback">이름을 다시 입력해주세요</div>
                </div>
                <!-- 닉네임 입력 -->
                <div class="col-sm-6">
                  <label for="lastName" class="form-label">Nickname</label>
                  <input name="nickname" id="nickname" type="text" class="form-control" placeholder="닉네임을 입력해주세요" value="" required />
                  <div id="nicknameError" class="invalid-feedback">닉네임을 다시 입력해주세요</div>
                </div>
                <!-- 이메일 입력 -->
                <div class="col-12">
                  <label for="email" class="form-label">Email</label>
                  <input name="email" id="email" type="email" class="form-control" placeholder="이메일을 입력해주세요" />
                  <div id="emailError" class="invalid-feedback">이메일을 다시 입력해주세요</div>
                </div>
                <!-- 비밀번호 입력 -->
                <div class="col-12">
                  <label for="address" class="form-label">Password</label>
                  <input name="password" id="password" type="text" class="form-control" placeholder="비밀번호를 입력해주세요 (숫자 8자리 이상)" required />
                  <div id="passwordError" class="invalid-feedback">비밀번호를 다시 입력해주세요</div>
                </div>
              </div>

              <!-- 위아래 간격 조정 -->
              <br />
              <br />

              <!-- 회원가입완료 버튼 -->
              <button id="signupButton" class="w-100 btn btn-primary btn-lg" type="submit">가입 완료하기</button>

              <!-- 위아래 간격 조정 -->
              <br />
              <br />
            </form>
          </div>
        </div>
